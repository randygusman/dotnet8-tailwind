@{
    ViewData["Title"] = "About";
}

<div class="container mx-auto py-16 px-4">
    <h1 class="text-4xl font-bold text-center text-gray-800 mb-8">About Us</h1>
    <p class="text-lg text-gray-700 leading-relaxed text-center mb-12">
        We are a passionate team committed to delivering top-notch products and services. Our mission is to provide innovative solutions
        that meet the needs of our customers while ensuring a seamless and efficient experience. With a diverse and talented team,
        we strive to push the boundaries of excellence in everything we do.
    </p>

    <div class="flex justify-center space-x-12">
        <div class="w-full md:w-1/3 text-center p-4">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">Our Mission</h2>
            <p class="text-lg text-gray-600">
                Our mission is to empower businesses with creative and technological solutions that help them grow, evolve, and thrive
                in an ever-changing world.
            </p>
        </div>

        <div class="w-full md:w-1/3 text-center p-4">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">Our Values</h2>
            <p class="text-lg text-gray-600">
                We believe in integrity, innovation, and a customer-first approach. We are committed to fostering a culture of
                collaboration and respect, always putting the needs of our clients at the heart of everything we do.
            </p>
        </div>

        <div class="w-full md:w-1/3 text-center p-4">
            <h2 class="text-xl font-semibold text-gray-800 mb-4">Our Vision</h2>
            <p class="text-lg text-gray-600">
                To be the leading provider of innovative solutions that not only meet the needs of today but anticipate the
                challenges of tomorrow.
            </p>
        </div>
    </div>

    <div class="mt-16 text-center">
        <h2 class="text-2xl font-semibold text-gray-800 mb-6">Meet Our Team</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
            <div class="flex flex-col items-center">
                <img class="w-32 h-32 rounded-full object-cover mb-4" src="https://via.placeholder.com/150" alt="Team Member">
                <h3 class="text-xl font-semibold text-gray-800">John Doe</h3>
                <p class="text-lg text-gray-600">CEO & Founder</p>
            </div>

            <div class="flex flex-col items-center">
                <img class="w-32 h-32 rounded-full object-cover mb-4" src="https://via.placeholder.com/150" alt="Team Member">
                <h3 class="text-xl font-semibold text-gray-800">Jane Smith</h3>
                <p class="text-lg text-gray-600">CTO</p>
            </div>

            <div class="flex flex-col items-center">
                <img class="w-32 h-32 rounded-full object-cover mb-4" src="https://via.placeholder.com/150" alt="Team Member">
                <h3 class="text-xl font-semibold text-gray-800">Mark Wilson</h3>
                <p class="text-lg text-gray-600">Lead Developer</p>
            </div>
        </div>
    </div>
</div>
